{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Jest", // This is the configuration name you will see in debug sidebar
      "type": "node",
      "request": "launch",
      "port": 5858,
      "address": "localhost",
      "sourceMaps": true,
      "stopOnEntry": false,
      "runtimeExecutable": null,
      "env": {
          "NODE_ENV": "development" // You can setup here any env vars you
      },
      "runtimeArgs": [
          "--debug-brk",
          "./node_modules/.bin/jest", // Path to Jest
          "-i"
      ],
      "cwd": "${workspaceRoot}"
    }
  ]
}